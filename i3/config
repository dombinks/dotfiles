bindsym $mod+Return exec --no-startup-id xfce4-terminal
bindsym $mod+space exec --no-startup-id rofi -modi drun -show drun \
        -config ~/.config/rofi/rofidmenu.rasi
bindsym $mod+t exec --no-startup-id rofi -show window \
        -config ~/.config/rofi/rofidmenu.rasi
bindsym $mod+w exec google-chrome-stable
bindsym $mod+n exec --no-startup-id /usr/bin/thunar
bindsym $mod+q kill

exec --no-startup-id xset s 480 dpms 600 600 600
exec xrandr --output DP-1 --mode 1920x1080 --right-of eDP-1 --primary
exec_always --no-startup-id picom -b --config  ~/.config/picom.conf
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec --no-startup-id ibus-daemon
exec --no-startup-id dex --autostart --environment i3
exec --no-startup-id /usr/bin/dunst
exec --no-startup-id nm-applet
# exec --no-startup-id blueberry-tray

exec --no-startup-id sleep 2 && nitrogen --restore
exec --no-startup-id sleep 1 && feh --bg-fill /home/dom/Pictures/background.jpg
#exec --no-startup-id sleep 1 && feh --bg-fill /usr/share/endeavouros/backgrounds/endeavouros-wallpaper.png
bindsym $mod+semicolon exec --no-startup-id ~/.config/i3/scripts/dracula-lock
exec --no-startup-id xss-lock -l ~/.config/i3/scripts/dracula-lock

bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

bindsym Print exec --no-startup-id scrot ~/Pictures/Screenshots/%Y-%m-%d-%T-screenshot.png && notify-send "Screenshot saved to ~/Pictures/Screenshots/$(date + \"%%Y-%%m-%%d-%%T\")-screenshot.png"
bindsym Ctrl+Print exec --no-startup-id scrot - | xclip -selection clipboard -t image/png && notify-send "Screenshot copied to clipboard"
bindsym Ctrl+Shift+Print exec --no-startup-id maim --select | xclip -selection clipboard -t image/png && notify-send "Selection saved to clipboard"

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
